<div class="item"
     ondragover="event.preventDefault();"
     draggable="true"
     @ondragstart="@OnDragStart"
     @ondrop="@OnDrop"
     @ondragenter="@OnDragEnter"
     @ondragleave="@OnDragLeave"
     @onclick="@OnClick">

    @if (Item != null)
    {
        @Index
        @Item.Item.DisplayName
        @Item.Quantity
    }

</div>