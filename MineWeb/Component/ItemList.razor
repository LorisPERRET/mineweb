@using MineWeb.Model

<CascadingValue Value="@this">
    <div class="top">
        <div class="input-group rounded">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" @onkeypress="@Search" @oninput="@((e) => { valueInputSearch=(string)e.Value;})" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </div>

        Trier :

        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
    </div>

    @if (items != null)
    {
        <table class="table">
            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <ItemListComponent CurrentItem="item" />
                    </tr>
                }
            </tbody>
        </table>
    }

    <DataGrid TItem="Item"
              Data="@items"
              ReadData="@OnReadData"
              TotalItems="@totalItem"
              PageSize="6"
              ShowPager
              Responsive>
    </DataGrid>
</CascadingValue>