@using MineWeb.Model

<CascadingValue Value="@this">
    <div class="top">
        <div class="input-group rounded">
            <input type="search" class="form-control rounded" placeholder=@Localizer["Search"] aria-label="Search" aria-describedby="search-addon" @oninput="@((e) => { valueInputSearch=(string)e.Value;})" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </div>

        @Localizer["Order"] :

        <label class="switch">
            <input type="checkbox" @onchange="@((e) => { this.IsSorted = (bool)e.Value; })">
            <span class="slider round"></span>
        </label>
    </div>
    <table class="table">
        @if (items != null)
        {
            <tbody>
                @for (int i = 0; i < pageItem; i++)
                {
                    <tr>
                        <ItemListComponent CurrentItem="items[i]"/>
                    </tr>
                }
            </tbody>
        }
    </table>
    <div class="bottom">
        <button class="right" @onclick="() => Button(-1)">
            &lt;
        </button>
        <p class="text-center m-0">@currentPage</p>
        <button class="left" @onclick="() => Button(1)">
            &gt;
        </button>
    </div>
</CascadingValue>